<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.game.plateforme_vocale"
    >
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Plateforme_vocale">
        <activity android:name="com.game.plateforme_vocale.view.codeBehind.Menu_PrincipaleActivity" android:theme="@style/Theme.Plateforme_vocale.NoActionBar">
          <intent-filter>
             <action android:name="android.intent.action.MAIN"/>
              <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity android:name="com.game.plateforme_vocale.view.codeBehind.GameActivity" android:theme="@style/Theme.Plateforme_vocale.NoActionBar" android:screenOrientation="portrait">
        </activity>

        <activity android:name="com.game.plateforme_vocale.view.codeBehind.ScoreActivity" android:theme="@style/Theme.Plateforme_vocale.NoActionBar">
        </activity>
        <activity android:name="com.game.plateforme_vocale.view.codeBehind.FinDePartieActivity" android:theme="@style/Theme.Plateforme_vocale.NoActionBar">
        </activity>
    </application>
</manifest>